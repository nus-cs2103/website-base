      "searchable": "no"
    },
    {"glob": "book/**/index.md",
      "searchable": "no"
    },
    {"glob": "git-trail/*.md",
      "searchable": "no"
    }
  ],
  "pagesExclude": ["**/*-fragment.md", "book/_site/**/*.*"],
