{
  "baseUrl": "/website",
  "titlePrefix": "TIC2002",
  "style": {
    "codeTheme": "light",
    "codeLineNumbers": true
  },
  "timeZone": "Asia/Singapore",
  "disableHtmlBeautify": true,
  "ignore": [
    "_site/*",
    ".idea/*",
    ".gitignore",
    "README.md",
    "schedule/admin/*",
    "*.md",
    "diagrams/*",
    "book/diagrams/*",
    ".git/*"
  ],
  "pages": [
    {"src": "index.md",
      "searchable": "no"},
    {"glob": "admin/index.md"},
    {"glob": "admin/mid-semester-survey-results.md",
      "searchable":  "no"},
    {"glob": "schedule/index.md",
      "searchable": "no"},
